<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BigButtonWhiteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/big_button_light</item>
    </style>

    <style name="BigButtonDarkStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/big_button_dark</item>
    </style>

    <style name="SmallButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/small_button</item>
    </style>

    <style name="SmallButtonYellowStyle">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:background">@drawable/small_button_yellow</item>
    </style>


</resources>
