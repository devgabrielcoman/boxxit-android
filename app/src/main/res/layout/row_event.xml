<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ProfilePicture"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/ProfileName"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ProfilePicture"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_medium"
        android:text="@string/activity_main_name_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ProfileBirthday"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/ProfileName"
        android:textAlignment="center"
        android:textColor="@color/text_medium"
        android:text="@string/activity_main_birthday_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/BottomSeparator"
        android:layout_below="@+id/ProfileBirthday"
        android:background="@color/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/RightSeparator"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/BottomSeparator"
        android:layout_toEndOf="@+id/BottomSeparator"/>

</RelativeLayout>
