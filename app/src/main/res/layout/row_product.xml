<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ProductPanel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow">

        <ImageView
            android:id="@+id/ProductImage"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/ProductName"
            android:layout_below="@id/ProductImage"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="@string/activity_explore_product_name_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ProductReason"
            android:textAlignment="center"
            android:text="@string/activity_explore_product_reason_sure_you"
            android:layout_below="@+id/ProductName"
            android:textColor="@color/text_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
        <RelativeLayout
            android:id="@+id/AmazonBtnBolder"
            android:gravity="center"
            android:background="@drawable/roundcourners"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ProductReason"
            android:layout_width="180dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/ProductPrice"
                android:text="@string/activity_explore_product_price_placeholder"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/GetOnAmazon"
                android:layout_toEndOf="@+id/ProductPrice"
                android:textColor="@color/primary"
                android:layout_marginStart="10dp"
                android:text="@string/activity_explore_get_amazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ProductReason"
            android:gravity="center"
            android:id="@+id/AmazonBtn"
            android:background="@color/transparent"
            android:layout_width="180dp"
            android:layout_height="30dp" />
        <ImageButton
            android:id="@+id/LikeButton"
            android:scaleType="centerInside"
            android:src="@drawable/nolike"
            android:layout_toEndOf="@+id/AmazonBtnBolder"
            android:layout_alignBottom="@id/AmazonBtnBolder"
            android:background="@color/transparent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>
</LinearLayout>
