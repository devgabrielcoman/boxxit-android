<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ProductImage"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/ProductName"
            android:layout_toEndOf="@id/ProductImage"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/activity_favourites_product_name_placeholder"
            android:layout_toStartOf="@+id/RemoveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ProductPrice"
            android:layout_below="@+id/ProductName"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ProductImage"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/RemoveButton"
            android:textStyle="bold"
            android:textColor="@color/text_red"
            android:text="@string/activity_favourites_product_price_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/BuyOnAmazonButton"
            android:layout_toEndOf="@+id/ProductImage"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/ProductPrice"
            android:layout_width="120dp"
            android:background="@drawable/roundcourners"
            android:layout_marginStart="12dp"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="12dp"
            android:text="@string/activity_explore_get_amazon"
            android:layout_height="28dp"/>

        <ImageButton
            android:id="@+id/RemoveButton"
            android:background="@color/transparent"
            android:src="@drawable/closebtn"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:layout_width="14dp"
            android:layout_height="14dp"/>
    </RelativeLayout>
</LinearLayout>
